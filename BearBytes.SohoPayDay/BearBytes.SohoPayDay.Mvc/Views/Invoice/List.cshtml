@model IEnumerable<BearBytes.SohoPayDay.Dto.InvoiceDto>

@{
    ViewBag.Title = ViewBag.InvoiceTypeFilter + " List";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("New " + (string)ViewBag.InvoiceTypeFilter.ToString(), "Add", "Invoice", new { Id = (int)ViewBag.InvoiceTypeFilter }, new { @class = "btn btn-success" })

</p>
<table class="table table-condensed table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @ViewBag.InvoiceTypeFilter.ToString() Number
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IssueDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvoiceNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Client.FullName)
        </td>
        <td>
            @item.IssueDate.ToShortDateString()
        </td>
        <td>
            @Html.ActionLink("View", "View", new { id=item.Id })
        </td>
    </tr>
}

</table>
