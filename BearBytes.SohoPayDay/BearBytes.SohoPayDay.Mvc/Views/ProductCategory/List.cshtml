@model IEnumerable<BearBytes.SohoPayDay.Dto.ProductCategoryDto>

@{
    ViewBag.Title = ViewBag.ProductTypeFilter.ToString() + " Category List";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("New " + (string)ViewBag.ProductTypeFilter.ToString(), "Add", "ProductCategory", new { Id = (int)ViewBag.ProductTypeFilter }, new { @class = "btn btn-success" })

</p>
<table class="table table-condensed table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
